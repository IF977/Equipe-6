}
.wig-navbar-logo-active {
    transition: all .2s;
    opacity: 1;
    width: 122px;
    top: 0;
}
.wig-homepage-title {
    color: #fff;
    font-size: 3em;
    font-weight: 500;
    line-height: .8em;
}
.wig-homepage-message {
    margin-top: 12px;
    font-size: 1.2em;
    font-weight: 200;
    /* line-height: 1.2em; */
    display: block;
}
.wig-about {
    background-color: rgba(255,255,255, .95);
    /*height: 100vh;*/
}
.wig-flex-about {
    justify-content: center;
    align-items: center;
    padding: 80px;
}
.wig-about h2 {
    font-size: 1.3em;
    font-weight: 500;
    color: $wig-xdarkgrey;
    margin-top: 34px;
}
.wig-about p {
    color: $wig-xdarkgrey;
}
.wig-about-item {
    text-align: center;
}

.wig-team {
    background-color: $wig-xdarkgrey;
    color: $wig-lightgrey;
}

.wig-flex-team {
    justify-content: center;
    align-items: center;
    padding: 40px;
    h1 {
        color: $wig-lightgrey;
        text-align: center;
        font-size: 1.8em;
        margin: 40px;
        width: 100%;
        &:before, &:after {
            content: '~';
            color: $wig-greatpink;
            font-weight: 200;
            margin: 10px;
        }
    }
}

.wig-team-member {
    text-align: center;
    h2 {
        font-size: 1.3em;
        margin-bottom: 0;
    }
    p {
        font-size: .9em;
    }
    a {
        color: $wig-oddyellow;
        &:hover {
            text-decoration: underline;
            color: $wig-oddyellow;
        }
        &:active {
            color: $wig-greatpink;
        }
    }
}

.wig-team-pic {
    width: 120px;
    border-radius: 47%;
    border: 5px solid #ef4471;
    margin: 30px;
}

.wig-footer {
    color: $wig-lightgrey;
    text-align: center;
    margin-top: 15px;
    font-size: .9em;
}

