

<div class="row">
    <section class="col-md-8">
        <h1><%= @e.name %></h1>
        <p>Endere√ßo: <%= @e.address %></p>
        <p>Contato: <%= @e.email %></p>
        <p>Site: <%= @e.website %></p>
        
        
    </section>
    <aside class="col-md-4">
        <div class="wig-review">
            <h3>Avalie este estabelecimento</h3>
            <div class="wig-thumbs">
                <a class="wig-review-box" href="<%= url_for(controller: "dashboard_client", action: "user_review_establishment", review: true, id: @e.id) %>">
                    <div class="wig-review-thumb">
                        <i class="fa fa-thumbs-up" aria-hidden="true"></i>
                    </div>
                </a>
                <a class="wig-review-box" href="<%= url_for(controller: "dashboard_client", action: "user_review_establishment", review: false, id: @e.id) %>">
                    <div class="wig-review-thumb">
                        <i class="fa fa-thumbs-down" aria-hidden="true"></i>
                    </div>
                </a>
            </div>
            <div class="wig-percentbar" data-toggle="tooltip" data-placement="bottom" title="<%= @rating_percentage %>">
                <div id="positive"></div>
            </div>
        </div>

            
    </aside>
</div>