<div class="container" id="flex-container">     
    <div class="col-md-4" id="signup">
        <section class="login-form">
            <div id="logo-signup">
                <%=image_tag("wig-logo-signup.png", class: "img-responsive")%>
            </div>

            <h1>Cadastro</h1>
            <%= flash_message.html_safe %>
            <%=form_for :user, url: {action: 'register_create_user'}, :method => :POST do |f| %>
                <div id="form-inputs">
                    <label for="name" class="wig-formlabel">Nome</label>
                    <%= f.text_field :name, class: "wig-textbox", placeholder: "Seu nome" %>
                    
                    <label for="email" class="wig-formlabel">E-mail</label>
                    <%=f.email_field :email, class: "wig-textbox", placeholder: "Seu email"%>
                    
                    <label for="password" class="wig-formlabel">Senha</label>
                    <%= f.password_field :password_digest, class: "wig-textbox", placeholder: "Escolha uma senha segura" %>
                    
                    <%= f.text_field :is_provider, style: "display: none", value: "Yes" %>
                    
                    <label for="confirmation-password" class="wig-formlabel">Confirmar senha</label>
                    
                    <input type="password" name="confirmation-password" class="wig-textbox" placeholder="Digite a senha novamente"/>
                </div>
                <%= f.submit "Criar conta", class: "wig-button" %>
            <%end%>
                
        </section>  
    </div>
</div>