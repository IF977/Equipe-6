<div class="container" id="flex-container">     
    <div class="col-md-4" id="signup">
        <section class="login-form">
            <div id="logo-signup">
                <%=image_tag("wig-logo-signup.png", class: "img-responsive")%>
            </div>

            <h1>Cadastro de Estabelecimento</h1>
           
            <%=form_for :establishment, url: {action: 'create'}, :method => :POST do |f| %>
                <div id="form-inputs">
                    <label for="name" class="wig-formlabel">Nome</label>
                    <%= f.text_field :name, class: "wig-textbox", placeholder: "Nome do estabelecimento" %>
                    
                    <label for="cnpj" class="wig-formlabel">CNPJ</label>
                    <%=f.email_field :cnpj, class: "wig-textbox", placeholder: "CNPJ"%>
                    
                    <label for="website" class="wig-formlabel">Website</label>
                    <%=f.email_field :website, class: "wig-textbox", placeholder: "Website"%>
                    
                    <label for="email" class="wig-formlabel">E-mail</label>
                    <%=f.email_field :email, class: "wig-textbox", placeholder: "Email"%>
                    
                    <label for="address" class="wig-formlabel">Endereço</label>
                    <%= f.password_field :address, class: "wig-textbox", placeholder: "Endereço do estabelecimento" %>
                    
                </div>
                <%= f.submit "Cadastrar estabelecimento", class: "wig-button" %>
            <%end%>
                
        </section>  
    </div>
</div>